    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-refresh access token if it's expired",
          "const accessTokenExpiresAt = pm.environment.get('access_token_expires_at');",
          "const refreshToken = pm.environment.get('refresh_token');",
          "",
          "if (accessTokenExpiresAt && refreshToken) {",
          "    const expirationTime = new Date(accessTokenExpiresAt).getTime();",
          "    const currentTime = new Date().getTime();",
          "    const timeBuffer = 5 * 60 * 1000; // 5 minutes buffer",
          "    ",
          "    if (currentTime >= (expirationTime - timeBuffer)) {",
          "        console.log('Access token is about to expire, refreshing...');",
          "        ",
          "        const refreshRequest = {",
          "            url: pm.environment.get('gateway_url') + '/refresh',",
          "            method: 'POST',",
          "            header: {",
          "                'Authorization': 'Bearer ' + refreshToken,",
          "                'Content-Type': 'application/json'",
          "            }",
          "        };",
          "        ",
          "        pm.sendRequest(refreshRequest, function (err, response) {",
          "            if (response && response.code === 200) {",
          "                const jsonData = response.json();",
          "                pm.environment.set('access_token', jsonData.access_token);",
          "                pm.environment.set('access_token_expires_at', jsonData.access_token_expires_at);",
          "                console.log('Access token refreshed successfully');",
          "            } else {",
          "                console.log('Failed to refresh access token');",
          "            }",
          "        });",
          "    }",
          "}"
        ]
      }
    }
  ]
}